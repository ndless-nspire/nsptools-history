#!/bin/sh
DIRNAME=`dirname "$0"`
for arg in "$@" args; do
	if [ $arg = -nostdlib ] ; then
		nostdlib=true
	fi
done
if [ "$nostdlib" != true ] ; then
	set "$@" "$DIRNAME/../system/crt0.o" "$DIRNAME/../system/syscalls.o"
fi
# some newlib symbols are not found if ld is used...
arm-elf-gcc -T "$DIRNAME/../system/ldscript" "$@"
